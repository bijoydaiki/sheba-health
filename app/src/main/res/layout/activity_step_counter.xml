<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFE5E5"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".Step_Counter">


    <androidx.cardview.widget.CardView
        android:layout_width="230dp"
        android:layout_gravity="center"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#FFE5E5"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/id_textview"
        android:textColor="#207003"
        android:textSize="24dp"
        android:text="Total Step : "
        android:layout_gravity="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_height="wrap_content">
    </TextView>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:textColor="#900"
        android:padding="10dp"
        android:layout_marginTop="200dp"
        android:justificationMode="inter_word"
        android:text="Note: If you walk with the screen on then it will count well but if you off your mobile screen then it does not count properly.So please don't optimize your mobile battery and allow background tasks.Then it will count even if your mobile screen is off"
        android:layout_height="wrap_content">
    </TextView>

</LinearLayout>