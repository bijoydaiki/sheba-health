<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vital_signs_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:background="#fff"
    android:paddingTop="16dp"
    android:paddingRight="14dp"
    android:paddingBottom="16dp"
    android:weightSum="1"
    tools:context="com.riad.shebahealthcheck.VitalSignsResults">


    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textColor="#900"
        android:justificationMode="inter_word"
        android:background="@drawable/textinputborder2"
        android:text="This App is not intended  for medical use, is only designed for General Fitness and Wellness purposes,  is not a medical device,  it uses Smartphone sensors  to measure  Fitness and Wellness level of a User."
        android:layout_height="wrap_content">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_weight="0.52"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="0.50"
            android:elevation="10dp"
            app:cardElevation="10dp"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="0.50"
                android:elevation="10dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:background="@drawable/textinputborder2"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:text=" Heart Rate Tracking"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/deep_green"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/HRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Normal Range \n        60-90"
                android:textSize="20sp"
                android:paddingBottom="4dp"
                android:textStyle="bold"
                android:textColor="@color/deep_green"
                android:layout_height="wrap_content">
            </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
<Space
    android:layout_width="wrap_content"
    android:layout_height="20dp"></Space>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="0.50"
                android:elevation="10dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"

                    android:background="@drawable/textinputborder2"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:orientation="vertical">



                <TextView
                    android:layout_width="wrap_content"
                    android:text=" Blood Pressure Tracking"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/deep_green"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/BP2V"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@android:color/transparent"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Normal Range\n120/80-140/90"
                    android:textSize="20sp"
                    android:paddingBottom="4dp"
                    android:textStyle="bold"
                    android:textColor="@color/deep_green"
                    android:layout_height="wrap_content">
                </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>
        </androidx.cardview.widget.CardView>


        <Space
            android:layout_width="5dp"
            android:layout_height="45dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight=".48"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="0.50"
                android:elevation="10dp"
                app:cardElevation="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:background="@drawable/textinputborder2"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:text=" Breathing  Rate Tracking"
                android:textSize="20sp"
                android:scaleType="fitCenter"
                android:textStyle="bold"
                android:textColor="@color/deep_green"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/RRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@android:color/transparent"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Normal Range \n       12-20"
                android:textSize="20sp"
                android:paddingBottom="4dp"
                android:scaleType="fitCenter"
                android:textStyle="bold"
                android:textColor="@color/deep_green"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ImageButton
        android:id="@+id/SendAll"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:scaleType="fitCenter"
       android:background="@drawable/share"/>

</LinearLayout>
